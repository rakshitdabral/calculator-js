<%- include('partials/header') %>
<img src="/images/circle.png">

<div class="container glass" data-tilt>
    
        <table class="table-main">
            <tr > <div class="display-screen ">
                <div id="display" class="screen"></div>
            </div></tr>
            <tr>
                <td><button class="btn-number glass-button-operator" id="clear" >Ac</button></td>
                <td><button class="btn-number glass-button-operator" id="delete"><i class="fa-solid fa-delete-left"></i></button></td>
                <td><button class="btn-operator  glass-button-operator" id="/">/</button></td>
                <td><button class="btn-operator  glass-button-operator" id="*">*</button></td>
            </tr>
            <tr>
                <td><button class="btn-number glass-button-number" id="7">7</button></td>
                <td><button class="btn-number glass-button-number" id="8"> 8</sup></button></td>
                <td><button class="btn-number glass-button-number" id="9">9</button></td>
                <td><button class="btn-number glass-button-operator " id="-">-</button></td>
            </tr>
            <tr>
                <td><button class="btn-number glass-button-number" id="4">4</button></td>
                <td><button class="btn-number glass-button-number" id="5">5</sup></button></td>
                <td><button class="btn-number glass-button-number" id="6">6</button></td>
                <td  class="btn-operator"><button  class="glass-button-operator" id="+">+</button></td>
            </tr>
            <tr>
                <td><button class="btn-number glass-button-number" id="1">1</button></td>
                <td><button class="btn-number glass-button-number" id="2">2</sup></button></td>
                <td><button class="btn-number glass-button-number" id="3">3</button></td>
                <td rowspan="2" ><button class="btn-operator big-button-equal  glass-button-operator" id="equal">=</button></td>
            </tr>
            
            <tr>
                <td colspan="2" class="btn-number "><button class=" big-button glass-button-number" id="0">0</button></td>
                <td><button class="btn-operator  glass-button-number" id="." >.</sup></button></td>
                
            </tr>
            
        </table>
</div>

<%- include('partials/footer') %>